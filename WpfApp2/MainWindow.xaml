<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="На второй экран" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="182" Height="55" Click="Button_Click"/>
        <RadioButton Name="radiobtn3" Content="3" FontSize="25" GroupName="Picture" HorizontalAlignment="Left" Margin="629,381,0,0" VerticalAlignment="Top" Height="32" Width="153" Checked="Radiobtn3_Checked"/>
        <RadioButton Name="radiobtn1" Content="1" FontSize="25" GroupName="Picture" HorizontalAlignment="Left" Margin="10,381,0,0" VerticalAlignment="Top" Height="32" Width="153" Checked="Radiobtn1_Checked"/>
        <RadioButton Name="radiobtn2" Content="2" FontSize="25" GroupName="Picture" HorizontalAlignment="Left" Margin="310,381,0,0" VerticalAlignment="Top" Height="32" Width="153" Checked="Radiobtn2_Checked"/>
        <Image Name="img" Source="{DynamicResource MyImageSource}" HorizontalAlignment="Left" Height="255" Margin="195,91,0,0" VerticalAlignment="Top" Width="331"/>

    </Grid>
</Window>
